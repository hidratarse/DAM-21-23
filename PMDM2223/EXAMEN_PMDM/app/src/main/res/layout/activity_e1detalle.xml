<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetalleActivity">

    <TextView
        android:id="@+id/detalleEstrellas"
        android:layout_width="103dp"
        android:layout_height="111dp"
        android:text="TextView"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/detalleLista"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/detalleDesc"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/detalleTitulo"
        android:layout_width="132dp"
        android:layout_height="33dp"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/detalleDesc"
        app:layout_constraintEnd_toStartOf="@+id/detalleEstrellas"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/detalleDesc"
        android:layout_width="184dp"
        android:layout_height="77dp"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/detalleLista"
        app:layout_constraintEnd_toStartOf="@+id/detalleEstrellas"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/detalleTitulo" />

    <TextView
        android:id="@+id/detalleLista"
        android:layout_width="334dp"
        android:layout_height="359dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/detalleDesc" />
</androidx.constraintlayout.widget.ConstraintLayout>