<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#383838"
    tools:context=".EVA1.prueba_listado.MainActivity2">

    <ImageView
        android:id="@+id/pokeImg"
        android:layout_width="132dp"
        android:layout_height="134dp"
        app:layout_constraintBottom_toTopOf="@+id/nuevoNombrePkmn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/pokedoll" />

    <EditText
        android:id="@+id/nuevoNombrePkmn"
        android:layout_width="270dp"
        android:layout_height="90dp"
        android:background="@drawable/fondotexto"
        android:ems="10"
        android:fontFamily="@font/pokemongbraeo"
        android:gravity="center"
        android:inputType="textPersonName"
        android:text="Nombre"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/nuevoNumPkmn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pokeImg" />

    <EditText
        android:id="@+id/nuevoNumPkmn"
        android:layout_width="270dp"
        android:layout_height="90dp"
        android:background="@drawable/fondotexto"
        android:ems="10"
        android:fontFamily="@font/pokemongbraeo"
        android:gravity="center"
        android:inputType="number"
        android:text="NÃºmero."
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/subirPoke"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nuevoNombrePkmn" />

    <Button
        android:id="@+id/pokeAtras"
        android:layout_width="160dp"
        android:layout_height="70dp"
        android:fontFamily="@font/pokemonunowngb"
        android:text="cancelar"
        android:textAllCaps="false"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/subirPoke"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nuevoNumPkmn" />

    <Button
        android:id="@+id/subirPoke"
        android:layout_width="160dp"
        android:layout_height="70dp"
        android:fontFamily="@font/pokemonunowngb"
        android:text="subir"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/pokeAtras"
        app:layout_constraintTop_toBottomOf="@+id/nuevoNumPkmn" />

    <Button
        android:id="@+id/eliminarPoke"
        android:layout_width="161dp"
        android:layout_height="75dp"
        android:fontFamily="@font/pokemonunowngb"
        android:text="eliminar"
        android:textAllCaps="false"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.913"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.899" />

    <Button
        android:id="@+id/editarPoke"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/pokemonunowngb"
        android:text="guardar"
        android:textAllCaps="false"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pokeAtras" />
</androidx.constraintlayout.widget.ConstraintLayout>